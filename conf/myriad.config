process {
  penv = 'smp'
  executor='sge'

  withLabel: 'longest' {
    cpus = 1
    echo = true
  }

  withLabel: 'gffread' {
    cpus = 1
    echo = true
  }

  withLabel: 'download' {
    cpus = 1
    echo = true
  }

  withName: "ORTHOFINDER" {
    cpus = 8
    clusterOptions = '-l mem=20G -l h_rt=24:0:0 -l tmpfs=20G'
  }

}

singularity.enabled = true
singularity.autoMounts = true
